[uwsgi]
project = firstsite
uid = sammy
base = /home/%(uid)

chdir = %(base)/%(project)
home = %(base)/Env/%(project)
module = %(project).wsgi:application

master = true
processes = 5

socket = /run/uwsgi/%(project).sock
chown-socket = %(uid):www-data
chmod-socket = 660
vacuum = true






socket = {{ base_dir }}/uwsgi.sock
chmod-socket = 775
chdir = {{ appdata_dir }}
master = true
binary-path = {{ base_dir }}/bin/uwsgi
virtualenv = {{ base_dir }}
module = {{ uwsgi_module }}
uid = {{ uid }}
gid = {{ gid }}
processes = {{ uwsgi_processes }}
threads = {{ uwsgi_threads }}
plugins = {{ uwsgi_plugins }}
logger = file:{{ base_dir }}/uwsgi.log
{% for env in uwsgi_env %}
env = {{ env }}
{% endfor %}
